---
import Main from "../../layouts/main.astro";
---


<Main>
    <section class="grid place-items-center py-3">
        <h2 class="text-2xl">Projects</h2>
    </section>
    <section class="grid place-items-center">
        <nav>
            <ul class="text-xl grid md:grid-cols-4 gap-5 p-4">
                <li class="bg-neutral-100 rounded-md p-2">
                    <div class="grid place-items-center">
                        <a class="underline" href="/projects/db">lexiDB</a>
                    </div>
                    <div class="grid place-items-center">
                        <p>An in-memory data structure database written in C</p>
                    </div>
                </li>
                <li class="bg-neutral-100 rounded-md p-2">
                    <div class="grid place-items-center">
                        <a class="underline" href="/projects/interpreter">interpreter</a>
                    </div>
                    <div class="grid place-items-center">
                        <p>An interpreter written in C</p>
                    </div>
                </li>
                <li class="bg-neutral-100 rounded-md p-2">
                    <div class="grid place-items-center">
                        <a class="underline" href="/projects/vstr">vstr</a>
                    </div>
                    <div class="grid place-items-center">
                        <p>A string implementation in C</p>
                    </div>
                </li>
                <li class="bg-neutral-100 rounded-md p-2">
                    <div class="grid place-items-center">
                        <a class="underline" href="/projects/diety">diety</a>
